<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trash"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/trash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/startpnt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_startpoint" />

    <ImageView
        android:id="@+id/endpnt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startpnt"
        app:srcCompat="@drawable/icon_endpoint" />

    <TextView
        android:id="@+id/textView10101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_bold"
        android:text="출발"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/startpnt"
        app:layout_constraintStart_toEndOf="@+id/startpnt"
        app:layout_constraintTop_toTopOf="@+id/startpnt" />

    <TextView
        android:id="@+id/textView10102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_bold"
        android:text="도착"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/endpnt"
        app:layout_constraintStart_toEndOf="@+id/endpnt"
        app:layout_constraintTop_toTopOf="@+id/endpnt" />

    <TextView
        android:id="@+id/bookstartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="26312(제2공학관)"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10101"
        app:layout_constraintStart_toEndOf="@+id/textView10101"
        app:layout_constraintTop_toTopOf="@+id/textView10101" />

    <TextView
        android:id="@+id/bookendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="26120(제1공학관)"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10102"
        app:layout_constraintStart_toEndOf="@+id/textView10102"
        app:layout_constraintTop_toTopOf="@+id/textView10102" />

</androidx.constraintlayout.widget.ConstraintLayout>