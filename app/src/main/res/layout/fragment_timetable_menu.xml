<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_shape"
    android:orientation="vertical"
    android:padding="15dp">

    <View
        android:id="@+id/contour"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCustomSchedule" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addCustomSchedule"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:fontFamily="@font/poppins_regular"
        android:fontWeight="600"
        android:gravity="left"
        android:text="커스텀 일정 추가하기"
        android:textSize="17dp"
        android:textStyle="bold"
        app:backgroundTint="#00000000"
        app:icon="@drawable/calendar"
        app:iconSize="27dp"
        app:iconPadding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contour1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addCustomSchedule2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:fontFamily="@font/poppins_regular"
        android:fontWeight="600"
        android:gravity="left"
        android:text="시간표 지우기"
        android:textSize="17dp"
        android:textStyle="bold"
        app:backgroundTint="#00000000"
        app:icon="@drawable/trash"
        app:iconSize="27dp"
        app:iconTint="@color/white"
        app:iconPadding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contour" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addCourse"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:fontFamily="@font/poppins_regular"
        android:fontWeight="600"
        android:gravity="left"
        android:text="강의 추가하기"
        android:textSize="17dp"
        android:textStyle="bold"
        app:backgroundTint="#00000000"
        app:icon="@drawable/add_course"
        app:iconSize="27dp"
        app:iconPadding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/contour1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#50FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/addCourse"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>