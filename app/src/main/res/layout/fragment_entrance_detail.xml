<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skkugreen"
    android:padding="10dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/starting"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:fontWeight="600"
        android:gravity="center"
        android:text="출발"
        android:textColor="#2B6653"
        android:textSize="14dp"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toStartOf="@+id/ending"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrancename" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ending"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#FF6C0F"
        android:fontFamily="@font/poppins_regular"
        android:fontWeight="600"
        android:gravity="center"
        android:text="도착"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/starting"
        app:layout_constraintTop_toBottomOf="@+id/entrancename" />

    <TextView
        android:id="@+id/entrancename"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins_bold"
        android:text="성균관대학교 화학관"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>